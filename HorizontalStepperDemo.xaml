                            <Label Text="Description 5" />
                        </VerticalStackLayout>
                    </mauiStepper:HorizontalStepView.Content>
                </mauiStepper:HorizontalStepView>

                <mauiStepper:HorizontalStepView Title="Step 3">
                    <mauiStepper:HorizontalStepView.Content>
                        <VerticalStackLayout>
                            <Label Text="Description 1" />
