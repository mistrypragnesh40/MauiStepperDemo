<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiStepperDemo.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Button Text="Vertical Stepper" x:Name="btnVertical" Clicked="btnVertical_Clicked"/>
            <Button Text="Horizontal Stepper" x:Name="btnHorizontal" Clicked="btnHorizontal_Clicked" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
